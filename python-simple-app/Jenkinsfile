pipeline {
    agent any
    environment {
        PYTHON_PATH = 'C:\\Users\\Admin\\AppData\\Local\\Programs\\Python\\Python312'
        PATH = "${env.PATH};${env.PYTHON_PATH};${env.PYTHON_PATH}\\Scripts"
    }
    stages {
        stage('Check Python & Pip') {
            steps {
                bat 'python --version'
                bat 'pip --version'
            }
        }
        stage('build') {
            steps {
                bat 'pip install -r python-simple-app/requirements.txt'
            }
        }
        stage('run') {
            steps {
                // Sử dụng PowerShell để chạy app dưới nền
                bat 'powershell -Command "Start-Process python -ArgumentList \'python-simple-app/app.py\' -NoNewWindow"'
            }
        }
        stage('test') {
            steps {
                bat 'powershell -Command "Start-Sleep -Seconds 60; curl http://localhost:8000"'
            }
        }
        stage('cleanup') {
            steps {
                // Dùng taskkill để dừng tiến trình chạy trên cổng 8000
                bat 'for /f "tokens=5" %%a in (\'netstat -ano ^| findstr :8000\') do taskkill /f /pid %%a'
            }
        }
    }
}
